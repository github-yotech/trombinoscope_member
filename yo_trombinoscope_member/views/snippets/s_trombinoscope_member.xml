                </div>
            </div>
        </section>
    </template>

    <template id="s_trombinoscope_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="TrombinoscopeMemberOptions" data-selector=".trombinoscope-member">
                <we-select string="Trombinoscope" class="trombinoscope-selection" data-reload="/">
                    <we-button data-select-trombinoscope="" data-select-trombinoscope-name="None" data-reload="/" class="trombinoscope-selection">None</we-button>
                </we-select>
                <div>
                    <we-range class="o_we_sublevel_1 trombi-option-row" string="Row" data-min="2" data-step="1" data-max="6" data-trombinoscope-row="" data-display-range-value="true"/>
                    <we-range class="o_we_sublevel_1 trombi-option-col" string="Column" data-min="2" data-step="1" data-max="6" data-trombinoscope-col="" data-display-range-value="true"/>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@data-js='layout_column']" position="attributes">
            <attribute name="data-exclude" add=".trombinoscope-member" separator=","/>
        </xpath>

        <xpath expr="//div[@data-js='ReplaceMedia']" position="attributes">
            <attribute name="data-exclude" add=".trombinoscope-image" separator=","/>
        </xpath>
    </template>

    <!-- Register asset dynamically-->
    <!-- TODO: Why static register don't work ?? -->
    <record id="yo_trombinoscope_member.s_trombinoscope_member_000_js" model="ir.asset">
        <field name="name">Trombinoscope Member 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">yo_trombinoscope_member/static/src/snippets/s_trombinoscope_member/000.js</field>
    </record>

    <record id="yo_trombinoscope_member.s_trombinoscope_member_000_scss" model="ir.asset">
        <field name="name">Trombinoscope Member 000 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">yo_trombinoscope_member/static/src/snippets/s_trombinoscope_member/000.scss</field>
    </record>

    <record id="yo_trombinoscope_member.s_trombinoscope_member_options_js" model="ir.asset">
        <field name="name">Trombinoscope Member Options JS</field>
        <field name="bundle">website.assets_wysiwyg</field>
        <field name="path">yo_trombinoscope_member/static/src/snippets/s_trombinoscope_member/options.js</field>
    </record>


</odoo>
